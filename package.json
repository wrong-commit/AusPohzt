{
    "name": "boganpost",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "clean": "tsc --build --clean tsconfig.build.json",
        "build": "tsc --build tsconfig.build.json",
        "watch": "tsc --build --watch",
        "back:server": "cd backend && npm  run server",
        "back:runner": "cd backend && watch npm run start",
        "front:site": "cd frontend && npm run start",
        "start": "npm run back:server & npm run back:runner & npm run front:site",
        "site": "npm run back:server & npm run front:site"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/jsdom": "^16.2.14",
        "jsdom": "^16.7.0",
        "snowpack-plugin-esbuild": "^1.0.0",
        "typescript": "^4.3.5"
    }
}